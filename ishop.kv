<Ishop>:

    FloatLayout:
        Label:
            text:root.display
            color: (0,1,0,1)
            size_hint: 0.2,0.1
            pos_hint:{'x':.1,'top':1}

        Button:
        
            text:'homepage'
            color: (0,1,0,1)
            size_hint: 0.2,0.1
            pos_hint:{'x':.1,'top':.9}
            on_press:
                app.root.current='ads'
        
        Button:
            text:'sell'
            color: (0,1,0,1)
            size_hint: 0.2,0.1
            pos_hint:{'x':.3,'top':.9}
            on_press:
                root.sell()
        
        Button:
            text:'buy '
            color: (0,1,0,1)
            size_hint: 0.2,0.1
            pos_hint:{'x':.5,'top':.9}
            on_press:
                root.buy()
        Button:
            text:'IGchat.. '
            color: (0,1,0,1)
            size_hint: 0.2,0.1
            pos_hint:{'x':.7,'top':.9}
            on_press:
                root.cart()
          
        
        Button:
	    
            text:'deliver'
            color: (0,1,0,1)
            size_hint: 0.16,0.1
            pos_hint:{'x':.9,'top':.9}
            on_press:
                app.root.current='invest'
        Button:
    	    
            text:'pay'
            color: (0,1,0,1)
            size_hint: 0.2,0.1
            pos_hint:{'x':.2,'top':.8}
            on_press:
                root.pay()
        Button:
    	    
            text:'mtn'
            color: (0,1,0,1)
            size_hint: 0.2,0.1
            pos_hint:{'x':.4,'top':.8}
            on_press:
                root.pay()
        
        Button:
    	    
            text:'airtel'
            color: (0,1,0,1)
            size_hint: 0.2,0.1
            pos_hint:{'x':.6,'top':.8}
            on_press:
                root.airtel()
        

        TextInput:
        	    
            text:'message'
            color: (0,1,0,1)
            size_hint: 0.3,0.05
            pos_hint:{'x':.6,'top':.6}
            

        AsyncImage:
            size_hint: 1,0.4
            pos_hint:{'x':.1,'top':.4}
            source: 'icon.png'
            allow_stretch: True
            border_radius:10,10,10,10

    


       
        

